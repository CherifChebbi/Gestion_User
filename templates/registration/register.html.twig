<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}" />
    {% endblock %}
    <title>Sign in_Sign up</title>
</head>
<body>
{% block body %}
<div class="container sign-up-mode">
    <div class="forms-container">
        <div class="signin-signup">
            <!-- sign up -->
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <form action="{{ path('app_register') }}" class="sign-up-form" method="post">
                {{ form_start(registrationForm) }}
                <h2 class="title">Sign up</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    {{ form_row(registrationForm.nom, {
                        'label': false,
                        'attr': {'placeholder': 'First Name '}
                    }) }}
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    {{ form_row(registrationForm.prenom, {
                        'label': false,
                        'attr': {'placeholder': 'Last Name'}
                    }) }}
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    {{ form_row(registrationForm.email, {
                        'label': false,
                        'attr': {'placeholder': 'Email'}
                    }) }}
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    {{ form_row(registrationForm.plainPassword, {
                        'label': false,
                        'attr': {'placeholder': 'Password'}
                    }) }}
                </div>
                {{ form_row(registrationForm.agreeTerms) }}
                <button type="submit" class="btn">Register</button>
                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>New here ?</h3>
                <p>
                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                    ex ratione. Aliquid!
                </p>
                <a href="{{ path('app_register') }}" class="btn transparent" id="sign-up-btn">
                    Sign up
                </a>
            </div>
            <img src="{{ asset('assets/img/log.svg') }}" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>One of us ?</h3>
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                    laboriosam ad deleniti.
                </p>
            <a href="{{ path('app_login') }}" class="btn transparent" id="sign-in-btn">
                    Sign in
            </a>
            </div>
            <img src="{{ asset('assets/img/register.svg') }}" class="image" alt="" />
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="{{ asset('assets/js/app.js') }}"></script>
<script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
<script>
    // JavaScript to add event listeners or other dynamic behaviors
</script>
{% endblock %}

</body>
</html>
